{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "module": "commonjs",
    "noEmit": false,
    "target": "es2017",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "next-env.d.ts",
    "app/**/*.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": ["**/*.ts", "next.config.ts", "postcss.config.ts", "polyfills.ts"]
}
